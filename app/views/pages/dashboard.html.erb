<h1 class="container text-center"> Dashboard </h1>

  <div class="text-center col-md-5 col-md-offset-5 bg-light">
<ul class="d-flex justify-content-center nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active text-secondary" id="home-tab" data-toggle="tab" href="#bookings" role="tab" aria-controls="home" aria-selected="true">Bookings</a>
  </li>
  <li class="nav-item">
    <a class="nav-link text-secondary" id="profile-tab" data-toggle="tab" href="#tour_creations" role="tab" aria-controls="profile" aria-selected="false">Tour Designs</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="bookings" role="tabpanel" aria-labelledby="home-tab">

    <div class="dash-column">
      <% @my_bookings.each do |booking| %>
        <% @tour = booking %>
        <%= render 'shared/tours-show-card' %>
      <% end %>
    </div>
  </div>

  <div class="tab-pane fade" id="tour_creations" role="tabpanel" aria-labelledby="profile-tab">
    <div class="dash-column py-2">
      <% @my_tour_designs.each do |booking| %>
        <% @tour = booking %>
        <%= render 'shared/dashboard-card' %>
    <% end %>
    </div>
  </div>
 </div>



