<div class="card-tours-show" id="title-card">
    <div class="row"> 
      <div class ="col-8"> <%= @tour.name %> </div>
      <% if @tour.public == false && @tour.tour == nil %>
        <div class ="col-4" style="text-align: end;"> 
          <%= button_to "Remove", tour_path(@tour), method: :delete, data: {confirm: "Are you sure?"} %>
          <%= button_to "Publish", publish_tour_path(@tour), class: "a-primary", method: :patch %> 
        </div>
      <% elsif @tour.public == true && @tour.tour == nil %>
        <div class ="col-4" style="text-align: end;"> 
          <%= button_to "Select", clone_tour_path(@tour), class: "a-primary", method: :patch %>
        </div>
      <% elsif @tour.tour != nil && @tour.tour_activities.first.start_time == nil%>
        <div class ="col-4" style="text-align: end;"> 
          <%= button_to "Start", start_tour_path(@tour), class: "a-primary", method: :patch %>
        </div>
      <% end %>
    </div>
    <div class="row"> 
      <div class ="col"> Description: <%= @tour.description %> </div>
    </div>
    <div class="row">
      <div class ="col"> Public: <%= @tour.public %> </div>
    </div>
</div>