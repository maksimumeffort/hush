
<div id="map"
     style="width: 100%; height:90vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

</div>



<div id="carouselExampleControls" class="carousel slide" data-interval="false">
  <div class="carousel-inner px-4 bg-transparent">
    <% @tours.each_with_index do |tour, i| %>
        <div class="carousel-item p-2 <%= i == 0 ? "active" : "" %>" data-center="<%= {lat: tour.activities.first.location.latitude, lng: tour.activities.first.location.longitude}.to_json%>">
          <div class="card card-body px-3">
           <h5> <%= link_to tour.name, tour_path(tour), class: "text-dark" %> </h5>
           <p class="mb-0  text-truncate" ><%= tour.description %> </p>
          </div>
        </div>
      <% end %>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <%# <span class="carousel-control-prev-icon" aria-hidden="true"></span> %>
    <i class="fas fa-chevron-left text-success" ></i>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <%# <span class="carousel-control-next-icon" aria-hidden="true"></span> %>
    <i class="fas fa-chevron-right text-success"></i>
    <span class="sr-only">Next</span>
  </a>
</div>

 

