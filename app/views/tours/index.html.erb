
<div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

</div>

<div class="container-inline">
  <div class='d-flex overflow-scroll'>
  <% @tours.each do |tour| %>
    <div class="card">
      <%=  link_to tour.name, tour_path(tour)%><br>
      <%= tour.description %>
  </div>
  <% end %>
  </div>
</div>


