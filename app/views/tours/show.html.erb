  <div class="d-flex flex-column">
    <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Add Activity
  </button>

<!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [@tour, @activity] do |f| %>
      </div>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :requirements %>
      <%= f.input :duration %>
      <%= f.association :location %>
      <%= f.submit class: "btn btn-primary"%>

    <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

  <div>
    <% @tour_activities.each do |tour_activity| %>
      <% step = @tour_activities.find_index(tour_activity) + 1; step_text = "Step #{step}" %>
      <div class="row p-1">
         <button type="button" id="toggle" class="btn btn-primary" onclick="toggleContent(this)"><%= step_text %></button>
      </div>
      <div class="row p-1" id="<%= step_text %>" style="display: none">
        <span class="column bg-light" >
          <%= step_text %>
          <h5 class="card-title"><%= tour_activity.activity.name %></h5>

        <p class="card-text"><%= tour_activity.activity.location.address %> </p>
        </span>
        <span class="column">
          <a href="#" class="btn btn-primary">Done</a>
        </span>
      </div>
    <% end %>
  </div>

  <div class="card bg-light" id="title-card">
    <div> <%= @tour.name %></div>
    <br>
    <div> Description: <%= @tour.description %> </div>
    <div> Public: <%= @tour.public %> </div>
  </div>

  <div>
    <%=  link_to "Remove", tour_path(@tour), method: :delete, data: {confirm: "Are you sure?"} %> 
    <%=  link_to "Edit", edit_tour_path(@tour) %>
    <%=  link_to "Publish", publish_tour_path(@tour), class: "a-primary", method: :patch%>
    <%=  link_to "Select", clone_tour_path(@tour), class: "a-primary", method: :patch%>
  </div>


<script type="text/javascript">
  var toggleContent = function(obj)
  {
      var x = document.getElementById(obj.innerHTML);
      if (x.style.display === "none") {
       x.style.display = "block";
     } else {
      x.style.display = "none";
    }
  }

</script>
