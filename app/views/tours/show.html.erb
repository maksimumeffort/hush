  
<div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

</div>
<div class="container-inline">
  <div class="d-flex flex-column">
    <div>
      <% @tour_activities.each do |tour_activity| %>
        <% step = @tour_activities.find_index(tour_activity) + 1; step_text = "Step #{step}" %>
        <div class="row p-1">
          <div> <button type="button" id="toggle" class="btn btn-primary" onclick="toggleContent(this)"><%= step_text %></button> </div>
        </div>
        <div class="row p-1" id="<%= step_text %>" style="display: none">
          <span class="column bg-light" >
            <%= step_text %>
            <h5 class="card-title"><%= tour_activity.activity.name %></h5>

      <!-- <%= simple_form_for [@tour, @activity] do |f| %>
