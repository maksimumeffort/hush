  
<div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

</div>
<div class="container-inline step-container">
  <div class="d-flex flex-column">
    <% @tour_activities.each do |tour_activity| %>
      <% step = @tour_activities.find_index(tour_activity) + 1; step_text = "Step #{step}" %>

      <div class="row p-1 step-button">
        <div style="margin-bottom: 4px;"> <button type="button" id="toggle" class="btn btn-primary" onclick="toggleContent(this)"><%= step_text %></button> </div>
      </div>
      <div class="row p-1" id="<%= step_text %>" style="display: none">
        <span class="column bg-light" >
          <%= step_text %>
          <h5 class="card-title"><%= tour_activity.activity.name %></h5>  
          <p class="card-text"><%= tour_activity.activity.location.address %> </p>
        </span>
        <span class="column">
          <a href="#" class="btn btn-primary">Done</a>
        </span>
      </div>
    <% end %>
    
  </div>
</div>

<div class="card-tours-show" id="title-card">
  <div class="row"> 
    <div class ="col-8"> <%= @tour.name %> </div>
    <div class ="col" style="text-align: end;"> <%=  button_to "Remove", tour_path(@tour), method: :delete, data: {confirm: "Are you sure?"} %> </div>
  </div>
  <div class="row"> 
    <div class ="col"> Description: <%= @tour.description %> </div>
  </div>
  <div class="row">
    <div class ="col"> Public: <%= @tour.public %> </div>
  </div>
</div>


</div>
<script type="text/javascript">
  var toggleContent = function(obj)
  {
      var x = document.getElementById(obj.innerHTML);
      if (x.style.display === "none") {
       x.style.display = "block";
     } else {
      x.style.display = "none";
    }
  }

</script>

